<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    
    <Button
        android:id="@+id/home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        />
    
    <TextView
        android:id="@+id/textLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="Letra: "
        android:textSize="45sp" />

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/textWord"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="20sp"
        android:inputType="none"/>

    <TextView
        android:id="@+id/textWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/home_button"
        android:layout_marginRight="50dp"
        android:textSize="20sp"
        android:text="Mensagem: " />

<!--    BotÃµes:   -->

    <Button
        android:id="@+id/button_morse"
        android:layout_width="190sp"
        android:layout_height="180dp"
        android:gravity="center"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@id/textLetter"
        android:layout_marginTop="30sp"
        android:padding="15dp"
        android:text=".-"
        android:textSize="50sp"
        android:layout_marginLeft="0dp"
        />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="176dp"
        android:layout_height="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="0dp"
        android:layout_alignBottom="@id/button_morse"
        android:layout_toLeftOf="@+id/button_morse"
        android:padding="15dp"
        android:text="\u232b"
        android:textSize="30sp"/>


    <Button
        android:id="@+id/button_endChar"
        android:layout_width="176dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@id/button_morse"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/button_morse"
        android:padding="15dp"
        android:text="\u2423"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/button_SMS"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/button_morse"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:text="Enviar por SMS"
        android:textSize="18sp"/>

</RelativeLayout>